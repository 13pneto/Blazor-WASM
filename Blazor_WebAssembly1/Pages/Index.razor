@page "/"

<h1>@Mensagem</h1>
<h2>@Saudacao()</h2>
<button @onclick="AtualizaMensagem">Atualiza Mensagem</button>

<Arbitrary_Parameters ProductTitle="Pizza Marguerita" src="img/pizza-margherita.jpg" alt="Arbitrary Parameter">

    
</Arbitrary_Parameters>
<input @bind="@Mensagem" />

@code {

    private string Mensagem { get; set; } = "Olá Pedro";


    private string Saudacao()
    {
        return "Hello, Saudacao.";
    }

    private void AtualizaMensagem()
    {
        Mensagem = "Mensagem Atualizada2!";
    }
} 